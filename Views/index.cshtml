@{
  Layout = "Shared/_Layout.cshtml";
}

<h1>Find the repeats of a word in text</h1>
<form action="/result">
  <label for="word-input">Enter Word:</label>
  <input type="text" name="word-input">
  <label for="string-input">Enter Text:</label>
  <textarea type="text" name="string-input" rows="5" cols="50"></textarea>
  <button type="submit" class="btn">Submit</button>
</form>
